{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowJs": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "jsx": "react",
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "declaration": false,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*"]
    }
  },
  "include": [
    "src",
    "typings/**/*.d.ts",
    "./node_modules/@types",
    "webpack",
    "webpack.config.ts"
  ]
}
